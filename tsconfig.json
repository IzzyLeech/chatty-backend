{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["DOM", "ES2015"],
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "paths": {
      "@auth/*": ["src/features/auth/*"],
      "@user/*": ["src/features/user/*"],
      "@post/*": ["src/features/post/*"],
      "@global/*": ["src/shared/globals/*"],
      "@service/*": ["src/shared/services/*"],
      "@socket/*": ["src/shared/sockets/*"],
      "@worker/*": ["src/shared/workers/*"],
      "@root/*": ["src/*"]
    }
  },
  "transformers": {
    "before": [{ "transform": "typescript-transform-paths" }],
    "afterDeclarations": [{ "transform": "typescript-transform-paths" }]
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "jest.config.ts"
  ]
}

